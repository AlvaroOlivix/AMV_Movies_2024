<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Nombre Movie"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/poster_movie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/name_movie"
        app:layout_constraintTop_toBottomOf="@id/name_movie"
        tools:ignore="MissingConstraints"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n"
        app:layout_constraintLeft_toRightOf="@id/poster_movie"
        app:layout_constraintTop_toBottomOf="@id/name_movie"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>