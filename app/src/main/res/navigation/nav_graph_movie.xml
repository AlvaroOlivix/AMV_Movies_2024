<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_movie"
    app:startDestination="@layout/view_movie_item">

    <fragment
        android:id="@+id/fragment_movie_list"
        android:name="edu.example.amv_movies_app.features.movie.presentation.ui.MovieListFragment"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/fragment_movie_list_to_fragment_movie_detail"
            app:destination="@id/fragment_movie_detail"/>

    </fragment>
    <fragment
        android:id="@+id/fragment_movie_detail"
        android:name="edu.example.amv_movies_app.features.movie.presentation.ui.MovieDetailFragment"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="id"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>